<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#6366f1"
                android:endColor="#8b5cf6"/>
        </shape>
    </item>

    <!-- White rounded logo background -->
    <item
        android:gravity="center"
        android:width="100dp"
        android:height="100dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- "L" letter shape in purple -->
    <item
        android:gravity="center"
        android:width="100dp"
        android:height="100dp">
        <layer-list>
            <!-- Vertical bar of L -->
            <item
                android:left="30dp"
                android:top="24dp"
                android:right="50dp"
                android:bottom="24dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="#6366f1"/>
                </shape>
            </item>
            <!-- Horizontal bar of L -->
            <item
                android:left="30dp"
                android:top="56dp"
                android:right="24dp"
                android:bottom="24dp">
                <shape android:shape="rectangle">
                    <corners android:radius="3dp"/>
                    <solid android:color="#6366f1"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Accent dot -->
    <item
        android:gravity="center"
        android:width="100dp"
        android:height="100dp">
        <layer-list>
            <item
                android:left="60dp"
                android:top="20dp"
                android:right="24dp"
                android:bottom="64dp">
                <shape android:shape="oval">
                    <solid android:color="#fbbf24"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
